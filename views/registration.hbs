<div class="container-fluid bg-light py-3">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card card-body">
                <h3 class="text-center mb-4">Sign-up</h3>
                {{!--
                <div class="alert alert-danger">
                    <a class="close font-weight-light" data-dismiss="alert" href="#">Ã—</a>Password is too short.
                </div> --}} 
                {{#if errors}}
                    {{#each errors}}
                    <div class="alert alert-danger">{{msg}}</div>
                    {{/each}}
                {{/if}}
                {{msg}}
                <form action="/register" method="POST">
                    <fieldset>
                        <div class="form-group has-error has-feedback">
                            <input class="form-control input-lg" placeholder="Username" name="username" type="text">
                        </div>
                        <div class="form-group has-error .has-feedbac">
                            <input class="form-control input-lg" placeholder="E-mail Address" name="email" type="text">
                        </div>
                        <div class="form-group has-error .has-feedbac">
                            <input class="form-control input-lg" placeholder="Password" name="password" value="" type="password">
                        </div>
                        <div class="form-group has-error .has-feedbac">
                            <input class="form-control input-lg" placeholder="Confirm Password" name="confirmPassword" value="" type="password">
                        </div>


                        {{!--
                        <div class="checkbox">
                            <label class="small">
                                <input name="terms" type="checkbox">I have read and agree to the
                                <a href="#">terms of service</a>
                            </label>
                        </div> --}}
                        <input class="btn btn-lg btn-primary btn-block" value="Sign Me Up" type="submit">
                    </fieldset>
                </form>

            </div>
        </div>
    </div>
</div>